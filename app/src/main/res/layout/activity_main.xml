<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:gravity="center_horizontal">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@android:color/black"
        app:title="Missile Invader"
        app:titleTextColor="@android:color/white" />

    <!-- スコア表示エリア -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/scoreLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:gravity="center">

            <ImageView
                android:id="@+id/seg1"
                android:layout_width="72dp"
                android:layout_height="108dp"
                android:layout_margin="2dp" />

            <ImageView
                android:id="@+id/seg2"
                android:layout_width="72dp"
                android:layout_height="108dp"
                android:layout_margin="2dp" />
        </LinearLayout>
        <!-- ★ここがデバッグ用残ミサイル表示 -->
        <TextView
            android:id="@+id/missile_count_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:textColor="#CCCCCC"
            android:textSize="24sp"
            android:layout_gravity="end|bottom" />
        <ProgressBar
            android:id="@+id/missile_gauge"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_width="16dp"
            android:layout_height="108dp"
            android:layout_gravity="end|center_vertical"
            android:layout_margin="8dp"
            android:indeterminate="false"
            android:max="50"
            android:progress="50"
            android:progressDrawable="@drawable/progress_missile"
            android:rotation="180" />
    </FrameLayout>

    <!-- ゲームビュー -->
    <tk.horiuchi.missileinvader.GameView
        android:id="@+id/gameView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_margin="8dp" />

    <!-- 操作ボタン -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="8dp">

        <ImageButton
            android:id="@+id/btn_fire"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_margin="8dp"
            android:background="@drawable/btn_fire"
            android:contentDescription="Fire Button"
            android:focusable="false"
            android:focusableInTouchMode="false"/>

        <ImageButton
            android:id="@+id/btn_left"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_margin="8dp"
            android:background="@drawable/btn_left"
            android:contentDescription="Left Button"
            android:focusable="false"
            android:focusableInTouchMode="false"/>

        <ImageButton
            android:id="@+id/btn_right"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_margin="8dp"
            android:background="@drawable/btn_right"
            android:contentDescription="Right Button"
            android:focusable="false"
            android:focusableInTouchMode="false"/>
    </LinearLayout>
</LinearLayout>
